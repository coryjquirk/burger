{{!-- setup the index.handlebars to have the template that Handlebars can render onto --}}
<div class="container">
    
    <h1 class="titleText">eat Borgus</h1>

  <h2 class="miniHeading">whatchu want?</h2>
  <div class="area">
    <form class="create-form">

        <label for="newburger">burger name:</label>
            <input type="text" id="newburger">
        <button type="submit" id="newburger">add that dream Burger</button>

    </form>
  </div>

  <h2 class="miniHeading">dream burgers</h2>
  <div class="area">
    <ul>

      <h3>still gotta eat these ones</h3>
      {{#each burgers}}
        {{#unless devoured}}
            <p class="borgus">>{{burger_name}}
                <button class="devour" data-id="{{id}}" data-devour="{{devoured}}">devour!</button>
        {{/unless}}
      {{/each}}</p>

    </ul>

    <h2 class="miniHeading">borguses devoured</h2>
    
    <h3>yea i ate these already</h3>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
            <p class="borgus">>{{burger_name}}
            </p>
        {{/if}}
      {{/each}}

    </ul>
    <img src="https://64.media.tumblr.com/0ab1c7f3d7f31ed53cdd725ec5a3c43b/tumblr_p7rmo0Qu9g1tbb76yo2_r1_500.png">
  </div>
</div>

