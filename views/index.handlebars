{{!-- setup the index.handlebars to have the template that Handlebars can render onto --}}
<h1>EatDa Borgus</h1>

<h2>Watchu want?</h2>
<form class="create-form">

    <label for="newburger">Burger name:</label>
        <input type="text" id="newburger">
    <button type="submit" id="newburger">Add Burger</button>

</form>

<h2>Burgers to eat</h2>

<ul>

  <li>gotta eat these ones</li>
  {{#each burgers}}
    {{#unless devoured}}
        {{burger_name}}
            <button class="devour" data-id="{{id}}" data-devour="{{devoured}}">devour!</button>
    {{/unless}}
    <br>
  {{/each}}

</ul>

<h2>Burgers devoured</h2>

<ul>
  <li>yea i ate these</li>
  {{#each burgers}}
    <br>
    {{#if devoured}}
        {{burger_name}}
        <br>
    {{/if}}
  {{/each}}

</ul>

